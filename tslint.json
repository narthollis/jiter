{
    "lintOptions": {
        "typeCheck": true
    },
    "extends": [
        "./node_modules/tslint-microsoft-contrib/tslint.json"
    ],
    "rulesDirectory": [
        "./node_modules/tslint-microsoft-contrib"
    ],
    "rules": {
        "typedef": [
            true,
            "parameter",
            "property-declaration",
            "member-variable-declaration"
        ],
        "no-inferrable-types": true
    }
}
